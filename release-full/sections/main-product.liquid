              <div class="loading-spinner" style="display: none;">
                <div class="spinner"></div>
        </div>
            </button>

            {%- if settings.enable_payment_button -%}
              {{ form | payment_button }}
      {%- endif -%}
        </div>
        {%- endform -%}
                </div>
                
