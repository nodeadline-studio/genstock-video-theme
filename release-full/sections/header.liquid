<!-- Auto Video Header Detection Script -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Check if there's a video header section on page
  function checkVideoHeaderSections() {
    const videoHeaderSections = document.querySelectorAll('[class*="video-header-custom"], .video-header-2025');
    const hasVideoHeader = videoHeaderSections.length > 0;
    
    // Also check for enabled video header in custom liquid sections
    const customLiquidSections = document.querySelectorAll('section[class*="custom-liquid"]');
    let hasEnabledVideoHeader = false;
    
    customLiquidSections.forEach(section => {
      if (section.querySelector('.video-header-custom-')) {
        hasEnabledVideoHeader = true;
      }
    });
    
    // Apply video header mode to body
    if (hasVideoHeader || hasEnabledVideoHeader) {
      document.body.classList.add('video-header-active');
      
      // Observe scroll to transition header back on scroll
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            document.body.classList.add('video-header-active');
          } else {
            // Only remove if scrolled past the video section
            if (entry.boundingClientRect.top < 0) {
              document.body.classList.remove('video-header-active');
            }
          }
        });
      }, { 
        threshold: 0.1,
        rootMargin: '0px 0px -80% 0px'
      });
      
      // Observe video header sections
      videoHeaderSections.forEach(section => observer.observe(section));
      document.querySelectorAll('.video-header-custom-').forEach(section => observer.observe(section));
    }
  }
  
  // Run on load
  checkVideoHeaderSections();
  
  // Also run when page updates (for SPA behavior)
  if (window.history && window.history.pushState) {
    const originalPushState = window.history.pushState;
    window.history.pushState = function(...args) {
      originalPushState.apply(window.history, args);
      setTimeout(checkVideoHeaderSections, 100);
    };
  }
});
</script>

