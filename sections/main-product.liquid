  <!-- Silent Quantity Management Script - PRODUCTION READY -->
  <script>
  document.addEventListener('DOMContentLoaded', function() {
    const productId = {{ product.id }};
    const productForm = document.querySelector('#{{ product_form_id }}');
    const submitButton = document.querySelector('#ProductSubmitButton-{{ section.id }}');
    const quantityInput = document.querySelector('#Quantity-{{ section.id }}');
    const quantityNotice = document.querySelector('#QuantityLimitNotice-{{ section.id }}');
    
    let cartCheckInProgress = false;
    let hasProductInCart = false;
    let checkTimeout = null;
    
    // Performance optimization: Debounced cart check
    function debounce(func, wait) {
      return function executedFunction(...args) {
        const later = () => {
          clearTimeout(checkTimeout);
          func(...args);
        };
        clearTimeout(checkTimeout);
        checkTimeout = setTimeout(later, wait);
      };
    }
    
    // Initialize quantity control with accessibility
    function initQuantityControl() {
      if (quantityInput) {
        quantityInput.value = 1;
        quantityInput.readOnly = true;
        quantityInput.setAttribute('aria-describedby', 'QuantityLimitNotice-{{ section.id }}');
        quantityInput.style.cursor = 'not-allowed';
        
        // Show limit notice with animation
        if (quantityNotice) {
          setTimeout(() => {
            quantityNotice.classList.add('show');
          }, 500);
        }
        
        // Add accessibility attributes
        quantityInput.setAttribute('aria-label', 'Quantity (limited to 1 per customer)');
        quantityInput.setAttribute('title', 'Quantity is limited to 1 per customer');
      }
    }
    
    // Enhanced cart check with error handling and retry logic
    async function checkCartForProduct(retryCount = 0) {
      if (cartCheckInProgress) return hasProductInCart;
      
      cartCheckInProgress = true;
      
      try {
        const controller = new AbortController();
        const timeoutId = setTimeout(() => controller.abort(), 5000); // 5s timeout
        
        const response = await fetch('/cart.js', {
          signal: controller.signal,
          headers: {
            'Accept': 'application/json',
            'Content-Type': 'application/json'
          }
        });
        
        clearTimeout(timeoutId);
        
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        
        const cart = await response.json();
        
        // Check if any variant of this product is in cart
        hasProductInCart = cart.items.some(item => item.product_id === productId);
        
        updateUIBasedOnCartState();
        
        // Reset retry count on success
        retryCount = 0;
        
      } catch (error) {
        console.log('Cart check failed:', error.name, error.message);
        
        // Retry logic for network issues
        if (retryCount < 2 && (error.name === 'TypeError' || error.name === 'AbortError')) {
          setTimeout(() => {
            checkCartForProduct(retryCount + 1);
          }, 1000 * (retryCount + 1)); // Exponential backoff
        } else {
          // Fallback: assume not in cart to allow purchase
          hasProductInCart = false;
          updateUIBasedOnCartState();
        }
      } finally {
        cartCheckInProgress = false;
      }
      
      return hasProductInCart;
    }
    
    // Update UI with smooth transitions and accessibility
    function updateUIBasedOnCartState() {
      if (!submitButton) return;
      
      // Smooth transition helper
      const updateWithTransition = (element, properties) => {
        Object.keys(properties).forEach(prop => {
          element.style[prop] = properties[prop];
        });
      };
      
      if (hasProductInCart) {
        // Disable add to cart button silently
        submitButton.disabled = true;
        submitButton.setAttribute('aria-disabled', 'true');
        submitButton.setAttribute('aria-label', 'Product already in cart');
        
        updateWithTransition(submitButton, {
          background: 'linear-gradient(135deg, #9ca3af 0%, #6b7280 100%)',
          cursor: 'not-allowed',
          transform: 'none',
          boxShadow: 'none'
        });
        
        // Update button text with fade transition
        const buttonText = submitButton.querySelector('span');
        if (buttonText) {
          buttonText.style.opacity = '0';
          setTimeout(() => {
            buttonText.textContent = 'Already in Cart';
            buttonText.style.opacity = '1';
          }, 150);
        }
        
        // Update quantity input
        if (quantityInput) {
          quantityInput.disabled = true;
          quantityInput.setAttribute('aria-disabled', 'true');
          updateWithTransition(quantityInput, {
            background: '#f3f4f6',
            color: '#9ca3af',
            borderColor: '#d1d5db'
          });
        }
      } else {
        // Enable add to cart button
        submitButton.disabled = false;
        submitButton.removeAttribute('aria-disabled');
        submitButton.setAttribute('aria-label', 'Add product to cart');
        
        updateWithTransition(submitButton, {
          background: '',
          cursor: '',
          transform: '',
          boxShadow: ''
        });
        
        // Update button text
        const buttonText = submitButton.querySelector('span');
        if (buttonText) {
          buttonText.style.opacity = '0';
          setTimeout(() => {
            buttonText.textContent = 'Add to Cart';
            buttonText.style.opacity = '1';
          }, 150);
        }
        
        // Update quantity input
        if (quantityInput) {
          quantityInput.disabled = false;
          quantityInput.removeAttribute('aria-disabled');
          updateWithTransition(quantityInput, {
            background: '#f9fafb',
            color: '#6b7280',
            borderColor: '#e5e7eb'
          });
        }
      }
    }
    
    // Enhanced form submission with loading states
    if (productForm) {
      productForm.addEventListener('submit', async function(e) {
        // Check cart before submission
        await checkCartForProduct();
        
        if (hasProductInCart) {
          e.preventDefault();
          
          // Shake animation for visual feedback
          submitButton.style.animation = 'shake 0.5s ease-in-out';
          setTimeout(() => {
            submitButton.style.animation = '';
          }, 500);
          
          return false;
        }
        
        // Add loading state
        if (submitButton) {
          const buttonText = submitButton.querySelector('span');
          const spinner = submitButton.querySelector('.loading__spinner');
          
          if (buttonText) buttonText.style.opacity = '0';
          if (spinner) spinner.classList.remove('hidden');
          
          submitButton.style.opacity = '0.7';
          submitButton.disabled = true;
        }
        
        // Proceed with normal form submission
        return true;
      });
    }
    
    // Debounced cart update listener
    const debouncedCartCheck = debounce(checkCartForProduct, 300);
    
    // Listen for cart updates with multiple event types
    ['cart:updated', 'cart:build', 'cart:refresh'].forEach(eventType => {
      document.addEventListener(eventType, function() {
        debouncedCartCheck();
      });
    });
    
    // Listen for Shopify variant change events
    document.addEventListener('variant:change', function(e) {
      if (e.detail && e.detail.variant) {
        // Reset cart check for new variant
        hasProductInCart = false;
        debouncedCartCheck();
      }
    });
    
    // Listen for variant changes from selector
    document.addEventListener('change', function(e) {
      if (e.target.name === 'id') {
        // Reset cart check for new variant
        hasProductInCart = false;
        debouncedCartCheck();
      }
    });
    
    // Enhanced error handling for add to cart failures
    document.addEventListener('cart:error', function(e) {
      if (submitButton) {
        const buttonText = submitButton.querySelector('span');
        const spinner = submitButton.querySelector('.loading__spinner');
        
        if (buttonText) {
          buttonText.textContent = 'Try Again';
          buttonText.style.opacity = '1';
        }
        if (spinner) spinner.classList.add('hidden');
        
        submitButton.style.opacity = '1';
        submitButton.disabled = false;
        
        // Reset button after 3 seconds
        setTimeout(() => {
          if (buttonText) buttonText.textContent = 'Add to Cart';
        }, 3000);
      }
    });
    
    // Page visibility change handling (for mobile browser switching)
    document.addEventListener('visibilitychange', function() {
      if (!document.hidden) {
        // Re-check cart when page becomes visible again
        debouncedCartCheck();
      }
    });
    
    // Handle browser back/forward navigation
    window.addEventListener('pageshow', function(e) {
      if (e.persisted) {
        // Page loaded from cache, re-check cart
        debouncedCartCheck();
      }
    });
    
    // Touch device optimization
    if ('ontouchstart' in window) {
      // Prevent double-tap zoom on submit button
      submitButton?.addEventListener('touchend', function(e) {
        e.preventDefault();
        if (!this.disabled) {
          this.click();
        }
      });
    }
    
    // Keyboard accessibility
    submitButton?.addEventListener('keydown', function(e) {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        if (!this.disabled) {
          this.click();
        }
      }
    });
    
    // Initialize everything
    initQuantityControl();
    
    // Initial cart check with delay to allow page to fully load
    setTimeout(() => {
      checkCartForProduct();
    }, 100);
    
    // Periodic cart sync (every 30 seconds) for long-lived sessions
    const cartSyncInterval = setInterval(() => {
      if (!document.hidden && !cartCheckInProgress) {
        checkCartForProduct();
      }
    }, 30000);
    
    // Cleanup interval on page unload
    window.addEventListener('beforeunload', function() {
      clearInterval(cartSyncInterval);
      if (checkTimeout) clearTimeout(checkTimeout);
    });
    
    // Add CSS for shake animation
    if (!document.querySelector('#quantity-shake-animation')) {
      const style = document.createElement('style');
      style.id = 'quantity-shake-animation';
      style.textContent = `
        @keyframes shake {
          0%, 20%, 40%, 60%, 80%, 100% { transform: translateX(0); }
          10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
        }
      `;
      document.head.appendChild(style);
    }
  });
  </script>
