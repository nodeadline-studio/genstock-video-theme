            "@type": "QuantitativeValue",
            "minValue": 0,
            "maxValue": 1,
            "unitCode": "DAY"
          },
          "transitTime": {
            "@type": "QuantitativeValue",
            "minValue": 0,
            "maxValue": 0,
            "unitCode": "DAY"
          }
        }
      },
      "hasMerchantReturnPolicy": {
        "@type": "MerchantReturnPolicy",
        "url": "{{ shop.url }}/policies/refund-policy",
        "applicableCountry": "{{ shop.address.country_code }}",
        "returnPolicyCategory": "https://schema.org/MerchantReturnFiniteReturnWindow",
        "merchantReturnDays": 30,
        "returnMethod": "https://schema.org/ReturnByMail"
      }
    },
    {%- comment -%} Add aggregateRating - always include for better SEO {%- endcomment -%}
    {%- if product.metafields.reviews.rating_count and product.metafields.reviews.rating_value -%}
