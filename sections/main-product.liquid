    },
    {
      "type": "select",
      "id": "gallery_layout",
      "label": "Desktop layout",
      "options": [
        {
          "value": "stacked",
          "label": "Stacked"
        },
        {
          "value": "thumbnails_left",
          "label": "Thumbnails left"
        }
      ],
      "default": "thumbnails_left"
    }
  ]
}
