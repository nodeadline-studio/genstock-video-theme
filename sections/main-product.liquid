{% comment %}
  Product Section v0.7 - Enhanced with Dual Purchase Buttons
  - Direct video gallery integration
  - Buy Now + Add to Cart buttons
  - Enhanced product information
  - Professional trust indicators
{% endcomment %}

<section id="MainProduct-{{ section.id }}" class="enhanced-product-section" data-section="{{ section.id }}">
  <div class="product-container">
    <!-- Media Gallery (60% desktop, 100% mobile) -->
    <div class="product-media">
      {% render 'enhanced-product-media-gallery-simple', product: product %}
    </div>

    <!-- Product Information (40% desktop, 100% mobile) -->
    <div class="product-info">
      <!-- Product Header -->
      <div class="product-header">
        <h1 class="product-title">{{ product.title }}</h1>
        
        {%- if product.vendor != blank -%}
          <div class="product-vendor">
            <span class="vendor-label">by</span>
            <span class="vendor-name">{{ product.vendor }}</span>
          </div>
        {%- endif -%}
        
        <!-- Price Display -->
        <div class="price-container" id="price-{{ section.id }}">
          <span class="current-price">
            {{ product.selected_or_first_available_variant.price | money }}
          </span>
          {%- if product.selected_or_first_available_variant.compare_at_price > product.selected_or_first_available_variant.price -%}
            <span class="compare-price">
              {{ product.selected_or_first_available_variant.compare_at_price | money }}
            </span>
            {%- assign savings = product.selected_or_first_available_variant.compare_at_price | minus: product.selected_or_first_available_variant.price -%}
            <span class="savings-badge">Save {{ savings | money }}</span>
          {%- endif -%}
        </div>
      </div>

      <!-- Product Form -->
      <div class="product-form-container">
        {%- form 'product', product, id: 'product-form-' | append: section.id, class: 'enhanced-product-form', novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
      <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
          
          <!-- Variant Selection -->
          {%- unless product.has_only_default_variant -%}
            <div class="variant-selectors">
              {%- for option in product.options_with_values -%}
                <div class="variant-selector">
                  <label class="variant-label">{{ option.name }}</label>
                  <select 
                    name="options[{{ option.name | escape }}]" 
                    id="Option-{{ forloop.index }}-{{ section.id }}"
                    class="variant-select">
                    {%- for value in option.values -%}
                      <option 
                        value="{{ value | escape }}"
                        {%- if option.selected_value == value -%} selected{%- endif -%}>
                        {{ value }}
                      </option>
                    {%- endfor -%}
                  </select>
                </div>
              {%- endfor -%}
            </div>
          {%- endunless -%}

          <!-- Quantity Selector -->
          <div class="quantity-selector">
            <label for="Quantity-{{ section.id }}" class="quantity-label">
              Quantity
            </label>
            <div class="quantity-input-container">
              <button type="button" class="quantity-btn quantity-decrease" aria-label="Decrease quantity">‚àí</button>
              <input 
                type="number" 
                id="Quantity-{{ section.id }}"
                name="quantity" 
                value="1" 
                min="1" 
                max="{{ product.selected_or_first_available_variant.inventory_quantity }}"
                class="quantity-input">
              <button type="button" class="quantity-btn quantity-increase" aria-label="Increase quantity">+</button>
            </div>
          </div>

          <!-- Dual Purchase Buttons -->
          <div class="purchase-buttons">
            <!-- Primary: Buy Now Button -->
            <button 
              type="button" 
              name="buy-now" 
              class="btn-buy-now"
              {%- unless product.selected_or_first_available_variant.available %} disabled{%- endunless %}>
              <span class="btn-text">
                {%- if product.selected_or_first_available_variant.available -%}
                  Buy Now
                {%- else -%}
                  Sold Out
                {%- endif -%}
              </span>
              <span class="btn-icon">‚Üí</span>
            </button>

            <!-- Secondary: Add to Cart Button -->
            <button 
              type="submit" 
              name="add" 
              class="btn-add-to-cart"
              {%- unless product.selected_or_first_available_variant.available %} disabled{%- endunless %}>
              <span class="btn-text">
                {%- if product.selected_or_first_available_variant.available -%}
                  Add to Cart
                {%- else -%}
                  Unavailable
                {%- endif -%}
              </span>
              <span class="btn-icon">üõí</span>
      </button>
          </div>

          <!-- Professional Purchase Notice -->
          <div class="purchase-notice">
            <div class="notice-content">
              <span class="notice-icon">üé¨</span>
              <div class="notice-text">
                <strong>Professional Video Content</strong>
                <p>High-quality stock footage for commercial use</p>
              </div>
            </div>
          </div>
        {%- endform -%}
      </div>

      <!-- Enhanced Trust Indicators -->
      <div class="trust-indicators">
        <div class="trust-item">
          <span class="trust-icon">‚ö°</span>
          <span class="trust-text">Instant Download</span>
        </div>
        <div class="trust-item">
          <span class="trust-icon">üìÑ</span>
          <span class="trust-text">Commercial License</span>
        </div>
        <div class="trust-item">
          <span class="trust-icon">üîí</span>
          <span class="trust-text">Secure Payment</span>
        </div>
        <div class="trust-item">
          <span class="trust-icon">‚≠ê</span>
          <span class="trust-text">Premium Quality</span>
        </div>
      </div>

      <!-- Enhanced Product Description -->
      {%- if product.description != blank -%}
        <div class="product-description">
          <h3 class="description-title">About This Video</h3>
          <div class="description-content">
            {{ product.description }}
          </div>
        </div>
      {%- endif -%}

      <!-- Video Specifications -->
      {%- if product.metafields.custom.video_duration_.value or product.metafields.custom.video_resolutions.value -%}
        <div class="video-specifications">
          <h3 class="specs-title">Video Specifications</h3>
          <div class="specs-grid">
            {%- if product.metafields.custom.video_duration_.value -%}
              {%- for duration in product.metafields.custom.video_duration_.value -%}
                <div class="spec-item">
                  <span class="spec-label">Duration {{ forloop.index }}:</span>
                  <span class="spec-value">
                    {%- assign duration_seconds = duration | plus: 0 -%}
                    {%- if duration_seconds >= 60 -%}
                      {%- assign minutes = duration_seconds | divided_by: 60 -%}
                      {%- assign seconds = duration_seconds | modulo: 60 -%}
                      {{ minutes }}:{{ seconds | prepend: '0' | slice: -2, 2 }}
                    {%- else -%}
                      0:{{ duration_seconds | prepend: '0' | slice: -2, 2 }}
                    {%- endif -%}
                  </span>
                </div>
              {%- endfor -%}
            {%- endif -%}
            
            {%- if product.metafields.custom.video_resolutions.value -%}
              {%- for resolution in product.metafields.custom.video_resolutions.value -%}
                <div class="spec-item">
                  <span class="spec-label">Resolution {{ forloop.index }}:</span>
                  <span class="spec-value">{{ resolution | replace: 'x', ' √ó ' }}</span>
                </div>
              {%- endfor -%}
            {%- endif -%}
          </div>
        </div>
      {%- endif -%}

      <!-- Social Sharing -->
      <div class="social-sharing">
        <h4 class="sharing-title">Share this video</h4>
        <div class="sharing-buttons">
          <button type="button" class="share-btn share-facebook" data-share="facebook" aria-label="Share on Facebook">
            üìò Facebook
          </button>
          <button type="button" class="share-btn share-twitter" data-share="twitter" aria-label="Share on Twitter">
            üê¶ Twitter
          </button>
          <button type="button" class="share-btn share-copy" data-share="copy" aria-label="Copy link">
            üîó Copy Link
          </button>
        </div>
    </div>
    </div>
  </div>
</section>

