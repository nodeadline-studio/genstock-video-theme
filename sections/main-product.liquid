/* Product Description */
.product-description {
  margin: 24px 0;
  padding: 20px;
  background: white;
  border-radius: 12px;
  border: 1px solid #e5e7eb;
}

.description-title {
  font-size: 1.125rem;
  font-weight: 600;
  color: #1f2937;
  margin: 0 0 12px 0;
}

.description-content {
  color: #4b5563;
  line-height: 1.6;
}

/* Video Specifications */
.video-specifications {
  margin: 24px 0;
  padding: 20px;
  background: white;
  border-radius: 12px;
  border: 1px solid #e5e7eb;
}

.specs-title {
  font-size: 1.125rem;
  font-weight: 600;
  color: #1f2937;
  margin: 0 0 16px 0;
}

.specs-grid {
  display: grid;
  gap: 8px;
}

.spec-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 0;
  border-bottom: 1px solid #f3f4f6;
}

.spec-item:last-child {
  border-bottom: none;
}

.spec-label {
  font-weight: 500;
  color: #6b7280;
}

.spec-value {
  font-weight: 600;
  color: #1f2937;
}

/* Social Sharing */
.social-sharing {
  margin: 24px 0;
  padding: 20px;
  background: white;
  border-radius: 12px;
  border: 1px solid #e5e7eb;
}

.sharing-title {
  font-size: 1rem;
  font-weight: 600;
  color: #1f2937;
  margin: 0 0 12px 0;
}

.sharing-buttons {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

.share-btn {
  padding: 8px 12px;
  border: 1px solid #e5e7eb;
  border-radius: 8px;
  background: white;
  color: #4b5563;
  font-size: 0.75rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
}

.share-btn:hover {
  background: #f8fafc;
  border-color: #d1d5db;
}

/* Responsive Design */
@media (max-width: 1024px) {
  .product-container {
    grid-template-columns: 1fr;
    gap: 20px;
    height: auto;
    max-height: none;
  }
  
  .enhanced-product-section {
    min-height: auto;
    max-height: none;
    padding: 16px;
  }
  
  .product-info {
    height: auto;
    overflow-y: visible;
  }
}

@media (max-width: 749px) {
  .enhanced-product-section {
    padding: 12px;
    max-height: 200vh;
  }
  
  .product-container {
    gap: 16px;
  }
  
  .product-info {
    padding: 16px;
  }
  
  .product-title {
    font-size: 1.5rem;
  }
  
  .current-price {
    font-size: 1.75rem;
  }
  
  .trust-indicators {
    grid-template-columns: 1fr;
    gap: 8px;
  }
  
  .purchase-buttons {
    gap: 8px;
  }
  
  .btn-buy-now, .btn-add-to-cart {
    padding: 14px 20px;
    min-height: 50px;
  }
}

/* Loading and interaction states */
.enhanced-product-form.loading .btn-buy-now,
.enhanced-product-form.loading .btn-add-to-cart {
  opacity: 0.7;
  pointer-events: none;
}

.enhanced-product-form.loading .btn-buy-now::after,
.enhanced-product-form.loading .btn-add-to-cart::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 20px;
  height: 20px;
  border: 2px solid transparent;
  border-top: 2px solid currentColor;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: translate(-50%, -50%) rotate(0deg); }
  100% { transform: translate(-50%, -50%) rotate(360deg); }
}
</style>

<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

