  cursor: pointer;
  transition: all 0.2s ease;
}

.share-btn:hover {
  background: #f8fafc;
  border-color: #d1d5db;
}

/* Responsive Design */
@media (max-width: 1024px) {
  .product-container {
    grid-template-columns: 1fr;
    gap: 20px;
    height: auto;
    max-height: none;
  }
  
  .enhanced-product-section {
    min-height: auto;
    max-height: none;
    padding: 16px;
  }
  
  .product-info {
    height: auto;
    overflow-y: visible;
  }
}

@media (max-width: 749px) {
  .enhanced-product-section {
    padding: 12px;
    max-height: 200vh;
  }
  
  .product-container {
    gap: 16px;
  }
  
  .product-info {
    padding: 16px;
  }
  
  .product-title {
    font-size: 1.5rem;
  }
  
  .current-price {
    font-size: 1.75rem;
  }
  
  .trust-indicators {
    grid-template-columns: 1fr;
    gap: 8px;
  }
  
  .purchase-buttons {
    gap: 8px;
  }
  
  .btn-buy-now, .btn-add-to-cart {
    padding: 14px 20px;
    min-height: 50px;
  }
}

/* Loading and interaction states */
.enhanced-product-form.loading .btn-buy-now,
.enhanced-product-form.loading .btn-add-to-cart {
  opacity: 0.7;
  pointer-events: none;
}

.enhanced-product-form.loading .btn-buy-now::after,
.enhanced-product-form.loading .btn-add-to-cart::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 20px;
  height: 20px;
  border: 2px solid transparent;
  border-top: 2px solid currentColor;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: translate(-50%, -50%) rotate(0deg); }
  100% { transform: translate(-50%, -50%) rotate(360deg); }
}
