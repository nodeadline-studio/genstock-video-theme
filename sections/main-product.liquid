    "gtin": "{{ product.selected_or_first_available_variant.barcode | escape }}",
    "mpn": "{{ product.selected_or_first_available_variant.barcode | escape }}",
    {%- else -%}
    "gtin": "{{ shop.id }}{{ product.id }}{{ product.selected_or_first_available_variant.id }}",
    "mpn": "{{ product.selected_or_first_available_variant.sku | default: product.id | escape }}",
    {%- endif -%}
    "brand": {
      "@type": "Brand",
      "name": "{{ product.vendor | default: shop.name | escape }}"
    },
    "category": "{{ product.type | escape }}",
    {%- if product.metafields.custom.video_duration_.value -%}
    "additionalProperty": [
      {
        "@type": "PropertyValue",
        "name": "Video Duration",
        "value": "{{ product.metafields.custom.video_duration_.value }} seconds"
      }
      {%- if product.metafields.custom.video_resolutions.value -%}
      ,{
        "@type": "PropertyValue", 
        "name": "Video Resolution",
        "value": "{{ product.metafields.custom.video_resolutions.value | remove: '[' | remove: ']' | remove: '"' }}"
      }
      {%- endif -%}
    ],
    {%- endif -%}
    "offers": {
      "@type": "Offer",
      "url": "{{ shop.url }}{{ product.url | split: '?' | first }}",
      "priceCurrency": "{{ cart.currency.iso_code }}",
      "price": "{{ product.selected_or_first_available_variant.price | money_without_currency | strip_html }}",
      "availability": {% if product.available %}"https://schema.org/InStock"{% else %}"https://schema.org/OutOfStock"{% endif %},
      "priceValidUntil": "{{ 'now' | date: '%Y-%m-%d' | date_add: 365, 'day' }}",
      "itemCondition": "https://schema.org/NewCondition",
      "seller": {
        "@type": "Organization",
        "name": "{{ shop.name | escape }}",
        "url": "{{ shop.url }}"
      },
      "shippingDetails": {
        "@type": "OfferShippingDetails",
        "shippingRate": {
          "@type": "MonetaryAmount",
          "value": "0",
          "currency": "{{ cart.currency.iso_code }}"
        },
        "shippingDestination": {
          "@type": "DefinedRegion",
          "addressCountry": "{{ shop.address.country_code }}"
        },
        "deliveryTime": {
